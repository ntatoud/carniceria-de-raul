<script type="text/javascript">
  const navItems = $(".menu-navbar .nav-link");
  // Remove the active tag of the previous item
  $(".nav-item .active").removeClass("active");

  // Add the active tag to the new current item
  const currentPath = window.location.pathname;
  const currentElement = navItems.filter((index, navItem) => {
    if (
      navItem.getAttribute("href") === currentPath ||
      (navItem.getAttribute("href") === "/shop" &&
        currentPath.includes("/shop/"))
    )
      return navItem;
  });
  currentElement.addClass("active");
</script>